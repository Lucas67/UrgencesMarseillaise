datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Caserne {
  id           Int        @id @default(autoincrement())
  name         String
  groupement   String
  latitude     Float
  longitude    Float
  effectifAct  Int
  maxEffectif  Int
  vehicules    Vehicule[]    // ðŸ’¥ Relation 1 caserne âž” plusieurs vÃ©hicules
  users        User[]
}

model Planning {
  id        Int         @id @default(autoincrement())
  pompierId Int
  annee     Int
  nrSemaine Int
  data      Json
  pompier   User      @relation(fields: [pompierId], references: [id])
}

model Vehicule {
  id         Int       @id @default(autoincrement())
  type       String
  statut     String
  latitude   Float
  longitude  Float
  caserneId  Int
  caserne    Caserne   @relation(fields: [caserneId], references: [id])
}

model User {
  id          Int       @id @default(autoincrement())
  username    String    @unique
  email       String    @unique
  password    String
  caserneId   Int
  grade       String
  status      String    @default("Au repos")
  caserne     Caserne   @relation(fields: [caserneId], references: [id])
  Planning    Planning[]
}