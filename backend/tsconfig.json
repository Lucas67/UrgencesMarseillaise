{
  "compilerOptions": {
    "target": "es2020",                       // Pour utiliser les dernières fonctionnalités JS utiles (async/await, etc.)
    "module": "commonjs",                     // Standard Node.js, sauf si tu passes à ESModules
    "lib": ["es2020"],                        // Bibliothèque standard JS
    "outDir": "dist",                         // Dossier de sortie pour le JS compilé
    "rootDir": "src",                         // Ton dossier source
  "moduleResolution": "node",
    "strict": true,                           // Active tous les contrôles stricts
    "esModuleInterop": true,                  // Pour importer les packages CommonJS
    "forceConsistentCasingInFileNames": true, // Évite les bugs sur les systèmes sensibles à la casse (Linux)
    "skipLibCheck": true,                     // Ignore les .d.ts des dépendances (plus rapide à compiler)
      
    "resolveJsonModule": true,                // Permet d'importer des .json
    "noImplicitAny": true,                    // Interdit les variables de type "any" implicite
    "noUnusedLocals": false,                   // Avertit si des variables ne sont pas utilisées
    "noUnusedParameters": true,               // Idem pour les paramètres de fonctions
    "noImplicitReturns": true,                // Oblige les fonctions à retourner quelque chose clairement
    "noFallthroughCasesInSwitch": true        // Évite les erreurs dans les switch
  },
  "include": ["src"],                         // Inclut tout le dossier source
  "exclude": ["node_modules", "dist"]         // Ignore les dépendances et le build
}
